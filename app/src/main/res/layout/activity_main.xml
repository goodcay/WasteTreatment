<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.MainActivity">
        <include layout="@layout/base_title"
            android:id="@+id/il_title"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/print_btn"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/print"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_btn"
                    android:layout_height="wrap_content"
                    android:text="打印"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/scan_btn"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/scan"/>
                <TextView

                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/color_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫码"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/gps_btn"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/gps"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_btn"
                    android:layout_height="wrap_content"
                    android:text="定位"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/qr_code_btn"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/qr_code"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/color_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二维码"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/img_btn"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/img"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_btn"
                    android:layout_height="wrap_content"
                    android:text="拍照"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/img_btn_luru"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/luru" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/color_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="录入信息"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>